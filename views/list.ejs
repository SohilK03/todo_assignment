<%- include("header") -%>

  <div class="box" id="heading">
    <h1> <%= listTitle %> </h1>
  </div>

  <div class="box">


  <%  newListItems.forEach(function(item){ %>

    <form action="/delete" method="post">
      <div class="item">
        <input type="checkbox" name="checkbox" value="<%=item._id%>">
        <p><%=item.name%></p>
      </div>
      <input type="hidden" name="listName" value="<%= listTitle %>"></input>
      <button type="submit">Delete Item</button> 
    </form>
  <%  }) %>


      <form class="item" action="/" method="post">
        <input type="text" name="newItem" placeholder="New Item" autocomplete="off">
        <button class="add_button" type="submit" name="list" value="<%= listTitle %>">+</button>
      </form>
      <form action="/deleteall" method="post"><button type="submit" name="listName" value="<%= listTitle %>">Reset</button> </form>
  </div>

<%- include("footer") -%>
